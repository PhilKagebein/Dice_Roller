<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/testHomeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.dice_Roller.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment"
        >
        <action
            android:id="@+id/navigateToSettingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.dice_Roller.SettingsFragment"
        android:label="SettingsFragment"
        >
        <action
            android:id="@+id/navigateToHomeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_testHomeFragment"
            app:destination="@id/testHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/testHomeFragment"
        android:name="com.example.dice_Roller.TestHomeFragment"
        android:label="TestHomeFragment"
        tools:layout="@layout/fragment_test_home">
        <action
            android:id="@+id/action_testHomeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
</navigation>