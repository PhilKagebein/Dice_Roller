<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_header"
        app:icon="@drawable/ic_baseline_settings_24">

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_baseline_vibration_24"
            app:key="vibrate"
            app:title="@string/vibrate"
            app:defaultValue="true"
            app:summaryOn="@string/vibrate_on"
            app:summaryOff="@string/vibrate_off"
            />

        <SwitchPreferenceCompat
            app:icon="@drawable/ic_baseline_bedtime_24"
            app:key="dark_mode"
            app:title="@string/dark_mode"
            app:defaultValue="true"
            />

    </PreferenceCategory>

</PreferenceScreen>